{{ dns_internal_zone }}:53 {
    hosts /etc/coredns/hosts {{ dns_internal_zone }} {
        reload 5s
        fallthrough
    }
    forward . {{ dns_internal_upstream }}
    log
    errors
    cache 30
}

.:53 {
    log
    errors
    forward . {{ dns_upstream }}
    cache 60
    health :8080
    ready :8181
}
