apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: /certs/ca/ca.pem
    # All containers share the same network namespace
    # Communication happens via localhost (127.0.0.1)
    server: https://127.0.0.1:6443
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: system:kube-controller-manager
  name: system:kube-controller-manager@kubernetes
current-context: system:kube-controller-manager@kubernetes
users:
- name: system:kube-controller-manager
  user:
    client-certificate: /certs/kubernetes/controller-manager.crt
    client-key: /certs/kubernetes/controller-manager.key
